{
  "name": "librebrowse-nextgen-svelte",
  "version": "1.0.0",
  "description": "LibreBrowse Nextgen \u2014 secure Electron browser with polished Svelte UI",
  "main": "src/main.js",
  "author": "libreakira-580",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:dev:ui\" \"npm:start\"",
    "dev:ui": "vite --config vite.renderer.config.js",
    "build:ui": "vite build --config vite.renderer.config.js",
    "start": "cross-env NODE_ENV=development electron .",
    "pack": "npm run build:ui && electron-builder --dir",
    "dist": "npm run build:ui && electron-builder --publish=never",
    "lint": "eslint . || true",
    "format": "prettier --write ."
  },
  "build": {
    "appId": "com.librebrowse.nextgen",
    "files": [
      "dist/**",
      "src/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "electron-store": "^8.0.0",
    "keytar": "^8.0.0",
    "@cliqz/adblocker-electron": "^0.14.0",
    "cross-fetch": "^4.0.5",
    "svelte": "^4.0.0",
    "@sveltejs/vite-plugin-svelte": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "vite": "^5.0.0",
    "concurrently": "^8.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "cross-env": "^7.0.3"
  }
}